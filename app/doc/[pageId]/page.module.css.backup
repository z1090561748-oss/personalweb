.container {
  min-height: 100vh;
  background: transparent;
  padding: 0;
  position: relative;
  z-index: 1;
}

.content {
  padding: 80px 60px;
  max-width: 100%;
}

.introSection {
  max-width: 1200px;
  margin: 0 auto 40px;
  padding: 20px 40px 10px;
}

.mainTitle {
  font-size: clamp(8rem, 15vw, 20rem);
  font-weight: 500;
  color: var(--text-primary);
  margin: 0 0 60px;
  letter-spacing: -0.05em;
  line-height: 1;
  text-transform: uppercase;
  text-align: left;
  display: inline-block;
  cursor: default;
}

.worksList {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 20px;
}

.workItem {
  cursor: pointer;
  width: 100%;
  margin-bottom: 10px;
}

.workTitle {
  font-size: clamp(1rem, 2.5vw, 3rem);
  font-weight: 200;
  color: var(--text-primary);
  margin: 0;
  letter-spacing: -0.05em;
  line-height: 1;
  text-transform: uppercase;
  text-align: left;
  display: inline-block;  transition: transform 0.3s ease;
  transition: transform 0.3s ease;
}

.workItem:hover .workTitle {
  transform: scale(1.2);
}

.workItem:hover .workTitle {  transform: scale(1.2);}.workTitle .char {
  display: inline-block;  transition: transform 0.3s ease;
  transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  transform-origin: center;
  transform: translate(var(--random-x, -60px), var(--random-y, -100px)) rotate(var(--random-rotation, 30deg));
  opacity: 0.2;
}

.workItem:hover .workItem:hover .workTitle {
  transform: scale(1.2);
}

.workItem:hover .workTitle {  transform: scale(1.2);}.workTitle .char {
  transform: translate(0, 0) rotate(0deg) scale(1.15);
  opacity: 1;
}

.char {
  display: inline-block;  transition: transform 0.3s ease;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  color: var(--text-primary);
  position: relative;
  z-index: 1;
}

.spinner {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 6px;
  margin-bottom: 30px;
}

.spinner span {
  width: 8px;
  height: 8px;
  background-color: white;
  border-radius: 50%;
  animation: dot-bounce 1.4s ease-in-out infinite;
}

.spinner span:nth-child(1) {
  animation-delay: 0s;
}

.spinner span:nth-child(2) {
  animation-delay: 0.2s;
}

.spinner span:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes dot-bounce {
  0%, 80%, 100% {
    transform: scale(0.8);
    opacity: 0.5;
  }
  40% {
    transform: scale(1);
    opacity: 1;
  }
}

.errorCard {
  max-width: 600px;
  margin: 100px auto;
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(10px);
  padding: 60px 40px;
  border-radius: 0;
  text-align: center;
  border: 1px solid var(--border);
  position: relative;
  z-index: 1;
}

.errorCard h2 {
  color: var(--accent-secondary);
  margin-bottom: 20px;
  font-weight: 300;
  font-size: 2rem;
  text-transform: uppercase;
  letter-spacing: 0.1em;
}

.errorCard p {
  color: var(--text-secondary);
  margin-bottom: 30px;
  font-size: 1.1rem;
}

.retryButton {
  background: transparent;
  border: 1px solid var(--accent);
  color: var(--accent);
  padding: 12px 30px;
  font-size: 1rem;
  cursor: pointer;
  transition: all 0.3s;
  text-transform: uppercase;
  letter-spacing: 0.1em;
  font-weight: 300;
}

.retryButton:hover {
  background: var(--accent);
  color: var(--bg-primary);
}

.empty {
  text-align: left;
  padding: 40px 0;
  color: var(--text-secondary);
  font-size: clamp(2rem, 5vw, 4rem);
  font-weight: 300;
}

@media (max-width: 768px) {
  .content {
    padding: 60px 30px;
  }

  .mainTitle {
    font-size: clamp(6rem, 12vw, 15rem);
    margin-bottom: 40px;
  }

  .workTitle {
    font-size: clamp(0.75rem, 2vw, 2.5rem);
  }
}
